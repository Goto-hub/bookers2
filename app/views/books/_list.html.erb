<div class='col-md-8 offset-md-1'>
<h2>Book</h2>
<table class='table table-hover table-inverse'>
  <thead>
    <tr>
     <th>Title</th>
     <th>Opinion</th>
     <th colspan="3"></th>
    </tr>
  </thead>
  
  <tbody>
<% books.each do |book| %>
<!-- @post_images â†’ post_images -->
 <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td class="button"><%= link_to "Show",  "/books/#{book.id}" %></td>
  </tr>
<% end %>
 </tbody>
</table>
</div>
<%= paginate books %>