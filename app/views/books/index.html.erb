<div class='container'>
  <div class = 'self_info'>
<div class='container px-5 px-sm-0'>
<h2>User info</h2>  
<div>
<!-- ユーザーの詳細 -->
<table class = 'table'>

  <tr><%= image_tag @user.get_profile_image(100,100) %></tr>
  <tr>
  <th>name</th>
  <th><%= @user.name %></th>
  </tr>
  <tr>
  <th>introduction</th>
  <th><%= @user.introduction %></th>
  </tr>
</table>
  <p><%= link_to "プロフィール編集", edit_user_path(@user.id)%></p>
</div>

<h2>New book</h2>

<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %> </br>
  <%= f.submit 'Create Book' %>
<% end %>
</div>
</div>


<div class='col-md-8 offset-md-1'>
<h2>Book</h2>
<table class='table table-hover table-inverse'>
  <thead>
    <tr>
     <th>title</th>
     <th>opinion</th>
     <th colspan="3"></th>
    </tr>
  </thead>
  
  <tbody>
<% @books.each do |list| %>
  <tr>
      <td><%= list.title %></td>
      <td><%= list.body %></td>
      <td class="button"><%= link_to "Edit",  "/books/#{list.id}" %></td>
      <td class="button"><%= link_to "Destroy", "/books/#{list.id}", method: :delete, "data-confirm" => "Are you sure?" %></td>
  </tr>
<% end %>
  </tbody>
</table>
</div>
</div>

