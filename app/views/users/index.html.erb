<div class='container px-5 px-sm-0'>
<div class = "row">
<div class ="col-md-3">  
<h2>User info</h2>  
<div>
<!-- ユーザーの詳細 -->
<table class = 'table'>

  <tr><%= image_tag @user.get_profile_image(100,100) %></tr>
  <tr>
  <th>name</th>
  <th><%= @user.name %></th>
  </tr>
  <tr>
  <th>introduction</th>
  <th><%= @user.introduction %></th>
  </tr>
</table>
  <p>
              <%= link_to edit_user_path(@user.id), class: 'btn-block' do%>
              <i class="fa-solid fa-user-gear" style="color: #687487;"></i>
              <% end %>
  </p>
</div>

<h2>New book</h2>

<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %> </br>
  <%= f.submit 'Create Book' %>
<% end %>
</div>

<div class='col-md-8 offset-md-1'>
<h2>Users</h2>
<table class='table table-hover table-inverse'>
  <thead>
    <tr>
     <th>image</th>
     <th>name</th>
     <th colspan="3"></th>
    </tr>
  </thead>
  
  <tbody>
<% @users.each do |list| %>
  <tr>
    <% if list != @user %> 
      <td><%=image_tag list.get_profile_image(100,100) %></td>
      <td><%= list.name %></td>
      <td class="button"><%= link_to "Show",  "/users/#{list.id}" %></td>
    <% end %>  
  </tr>
<% end %>
  </tbody>
</table>
</div>
</div>
</div>